<!DOCTYPE html>
<html>
  <head>
    <title>BookReview</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= stylesheet_link_tag "BOOTSTRAP_FOUR", media: 'all'%> 
    
    <%= javascript_include_tag 'JSONE'%>
    <%= javascript_include_tag 'JSTWO'%>
    <%= javascript_include_tag 'JSTHREE'%>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <%= link_to  "Book Review", root_path, class:"navbar-brand" %>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
              <li>
                <%= link_to  "Sign Up", new_user_registration_path, class:"nav-link"%>
              </li>
             <% if user_signed_in? %>
                <li>
                  <%= link_to  "Sign Out", destroy_user_session_path, class:"nav-link", method: :delete %>
                </li>
              <% else %>
                <li>
                  <%= link_to  "Log In", new_user_session_path, class:"nav-link" %>
                </li>
             <% end %>
          </ul>
          <ul class="navbar-nav">
            <% if user_signed_in? %>
              <li>
                <%= link_to  "Add Book", new_book_path, class:"nav-link"%>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
